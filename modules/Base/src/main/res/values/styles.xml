<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  转场动画  -->
    <style name="RightFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_pop_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_pop_exit</item>
    </style>

    <style name="FadeInOut" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fade_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/fade_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/fade_pop_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/fade_pop_exit</item>
    </style>

    <style name="NoAnimate" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/no_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/no_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/no_anim</item>
    </style>
</resources>